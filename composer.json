{
    "name": "torstendittmann/gustav",
    "description": "A modern HTTP Framework for PHP.",
    "type": "library",
    "license": "MIT",
    "require": {
        "sabre/http": "^6.0"
    },
    "scripts": {
        "test": "./vendor/bin/phpunit --testdox tests",
        "example": "php -S localhost:80 ./example/index.php",
        "check": "./vendor/bin/phpstan analyze",
        "lint": "./vendor/bin/pint --test src tests",
        "format": "./vendor/bin/pint src tests"
    },
    "require-dev": {
        "laravel/pint": "^1.1",
        "phpstan/phpstan": "^1.8",
        "phpunit/phpunit": "^9.5"
    },
    "autoload": {
        "psr-4": {
            "TorstenDittmann\\Gustav\\": "src/"
        }
    },
    "authors": [
        {
            "name": "Torsten Dittmann",
            "email": "torsten.dittmann@googlemail.com"
        }
    ],
    "minimum-stability": "stable"
}
